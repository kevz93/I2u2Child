<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"  android:animateLayoutChanges="true"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi there ! Welcome to the i2u2 experience. Enter a unique name to get started (:"
        android:id="@+id/diagTV"
        android:alpha="0"
        android:allowUndo="true"
        android:textColor="@color/cardview_dark_background"
        android:layout_above="@+id/inp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:textSize="20sp"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
        android:alpha="0"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Start!"
        android:id="@+id/goButton"
        android:layout_below="@+id/inp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="normal"
        android:alpha="0"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/eTV"
        android:layout_below="@+id/diagTV"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:layout_marginBottom="30dp"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingicon"
        android:layout_alignTop="@+id/inp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>